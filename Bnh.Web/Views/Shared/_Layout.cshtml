<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Brand New Homes</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link href="@Url.Content("~/Styles/Layout.css")" rel="stylesheet" type="text/css" />
        @RenderSection("Styles", false)
        <meta name="viewport" content="width=device-width" />
    </head>
    <body>
        <div class="page">

            <div class="header">
                <div class="logo"></div>
                <div class="user-display">
                    <span class="user-actions">@Html.Partial("_LoginPartial")</span>
                </div>
            </div>
        
            <div class="menu">
                <nav>
                    <ul>
                        @Html.ActionMenuItem("Home", "Index", "Home")
                        @Html.ActionMenuItem("Communities", "Index", "Community")
                        @Html.ActionMenuItem("Forum", "Index", "Builder")
                        @Html.ActionMenuItem("Search", "About", "Home")
                    </ul>
                    <ul class="right">
                        @Html.ActionMenuItem("About", "About", "Home")
                    </ul>
                </nav>
            </div>

            <div class="content">
                @RenderBody()
            </div>

            <div class="footer">
                <div class="credits">
                    <span class="poweredby">Powered by <a href="http://www.msilivonik.com" target="_blank">Me</a></span>
                    <span class="copyright">© Me 2012</span>
                </div>
            </div>

        </div>

    <script src="@Url.Content("~/Scripts/jquery-1.7.2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.20.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.json-2.3.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
    @*<script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>*@
    @RenderSection("Scripts", false)
    </body>
</html>
