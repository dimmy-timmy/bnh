<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Brand New Homes</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link href="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Content/css")" rel="stylesheet" type="text/css" />
        <link href="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Content/themes/base/css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Styles/Layout.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Styles/Community.css")" rel="stylesheet" type="text/css" />
        @RenderSection("Styles", false)
        <script src="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Scripts/js")"></script>
        <meta name="viewport" content="width=device-width" />
    </head>
    <body>
      <div class="page" id="layout-wrapper">

        <header id="layout-header" class="group">
            <div id="header">
                <div class="zone zone-header">
                    <div id="logo"></div>
                    @*<h1 id="branding">
                        @Html.ActionLink("Brand New Home", "Index", "Home")
                    </h1>*@
                    <div class="user-display" style="float:right">
                        <span class="user-actions">@Html.Partial("_LoginPartial")</span>
                    </div>
                </div>
            </div>
        </header>

        <div class="group" id="layout-navigation">
            <div class="zone zone-navigation">
                <nav>
                    <ul class="menu menu-main">
                        @Html.ActionMenuItem("Home", "Index", "Home")
                        @Html.ActionMenuItem("Communities", "Index", "Community")
                        @Html.ActionMenuItem("Forum", "Index", "Builder")
                        @Html.ActionMenuItem("Search", "About", "Home")
                    </ul>
                    <ul class="menu menu-main right">
                        @Html.ActionMenuItem(HttpContext.Current.User.Identity.IsAuthenticated ? "Account" : "Login", "Login", "Account")
                        @Html.ActionMenuItem("About", "About", "Home")
                    </ul>
                </nav>
            </div>
        </div>

        <div id="layout-main-container">
            <div id="layout-main" class="group">
                <div id="layout-content" class="group">
                    <div id="content" class="group">
                        <div class="zone zone-content">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="layout-footer" class="group">
            <footer id="footer">
                <div id="footer-quad" class="group">
                </div>
                <div id="footer-sig" class="group">
                    <div class="zone zone-footer">
                        <div class="credits">
                            <span class="poweredby">Powered by <a href="http://www.msilivonik.com" target="_blank">Me</a></span>
                            <span class="copyright">© Me 2012</span>
                        </div>
                    </div>
                </div>
            </footer>
        </div>

    </div>
    </body>
</html>
