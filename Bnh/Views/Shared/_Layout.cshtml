<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    @RenderSection("Styles", false)
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page" id="layout-wrapper">

        <header id="layout-header" class="group">
            <div id="header">
                <div class="zone zone-header">
                    <h1 id="branding">
                        @Html.ActionLink("Brand New Home", "Index", "Home")
                    </h1>
                </div>
            </div>
        </header>

        <div class="group" id="layout-navigation">
            <div class="zone zone-navigation">
                <nav>
                    <ul class="menu menu-main">
                        @Html.ActionMenuItem("News", "Index", "Home")
                        @Html.ActionMenuItem("Communities", "Index", "Community")
                        @Html.ActionMenuItem("Builders", "Index", "Builder")
                        @Html.ActionMenuItem("Home Plans", "About", "Home")
                        @Html.ActionMenuItem("Showhomes", "About", "Home")
                        @Html.ActionMenuItem("Map", "About", "Home")
                    </ul>
                    <ul class="menu menu-main right">
                        @Html.ActionMenuItem("Log On", "LogOn", "Account")
                        @Html.ActionMenuItem("About", "About", "Home")
                    </ul>
                </nav>
            </div>
        </div>

        <div id="layout-main-container">
            <div id="layout-main" class="group">
                <div id="layout-content" class="group">
                    <div id="content" class="group">
                        <div class="zone zone-content">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="layout-footer" class="group">
            <footer id="footer">
                <div id="footer-quad" class="group">
                </div>
                <div id="footer-sig" class="group">
                    <div class="zone zone-footer">
                        <div class="credits">
                            <span class="poweredby">Powered by <a href="http://www.msilivonik.com" target="_blank">Me</a></span>
                            <span class="copyright">© Me 2012</span>
                        </div>
                        <div class="user-display">
                            <span class="user-actions">@Html.Partial("_LogOnPartial")</span>
                        </div>
                    </div>
                </div>
            </footer>
        </div>

    </div>
</body>
</html>
